# OmnifyProduct Environment Configuration
# Copy this file to .env and update with your actual values

# ========== Application Settings ==========
ENVIRONMENT=development
LOG_LEVEL=INFO

# ========== Database Configuration ==========
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=changeme_secure_password
DB_NAME=omnify_cloud

# ========== Redis Configuration ==========
REDIS_PASSWORD=changeme_redis_password

# ========== RabbitMQ Configuration ==========
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=changeme_rabbitmq_password

# ========== JWT Configuration ==========
JWT_SECRET_KEY=changeme_jwt_secret_key_min_32_characters
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ========== AgentKit Configuration ==========
AGENTKIT_API_KEY=your_agentkit_api_key_here
AGENTKIT_API_BASE=https://api.openai.com/v1
CHATGPT_ENTERPRISE_ENABLED=false
GOHIGHLEVEL_INTEGRATION_ENABLED=false

# ========== OpenAI Configuration ==========
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=your_openai_org_id_here

# ========== Grafana Configuration ==========
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=changeme_grafana_password

# ========== Production Domain ==========
DOMAIN=omnifyproduct.com

# ========== Email Configuration (for alerts) ==========
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password
SMTP_FROM=noreply@omnifyproduct.com

# ========== Slack Configuration (for alerts) ==========
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# ========== AWS Configuration (if using AWS services) ==========
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=omnify-backups

# ========== Stripe Configuration (for billing) ==========
STRIPE_API_KEY=sk_test_your_stripe_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key

# ========== Sentry Configuration (for error tracking) ==========
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id

# ========== Rate Limiting ==========
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_PER_DAY=10000

# ========== Feature Flags ==========
ENABLE_SIGNUP=true
ENABLE_SOCIAL_LOGIN=false
ENABLE_TWO_FACTOR_AUTH=false
ENABLE_API_DOCS=true

# ========== Backup Configuration ==========
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# ========== Performance Configuration ==========
MAX_CONCURRENT_AGENTS=10
AGENT_TIMEOUT_SECONDS=300
CACHE_TTL_SECONDS=3600
